@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.UICulture.Name ?? "zh-TW";
    var htmlLang = currentCulture == "en" ? "en" : "zh-TW";
}
<!DOCTYPE html>
<html lang="@htmlLang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@Localizer["SiteDescription"]" />
    <title>@ViewData["Title"] - @Localizer["SiteTitle"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/high-contrast.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Zoo.styles.css" asp-append-version="true" />
    <!-- 跳轉至主要內容連結 (Skip Link) -->
    <a href="#main-content" class="visually-hidden-focusable btn btn-primary position-absolute top-0 start-0 m-2" style="z-index: 9999;">
        @Localizer["SkipToContent"]
    </a>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success shadow-sm" role="navigation" aria-label="@Localizer["MainNavigation"]">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <i class="bi bi-tree-fill me-2" aria-hidden="true"></i>
                    <span>@Localizer["SiteName"]</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="@Localizer["ToggleNavigation"]">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-door me-1"></i>@Localizer["Home"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Animals/Index">
                                <i class="bi bi-bug me-1"></i>@Localizer["AnimalIntro"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Map/Index">
                                <i class="bi bi-map me-1"></i>@Localizer["ZoneMap"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Routes/Index">
                                <i class="bi bi-signpost-2 me-1"></i>@Localizer["TourRoutes"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Favorites/Index">
                                <i class="bi bi-heart me-1"></i>@Localizer["MyFavorites"]
                            </a>
                        </li>
                    </ul>
                    <!-- 全站搜尋框 -->
                    <div class="d-flex me-3" style="min-width: 250px;">
                        @{ 
                            ViewData["SearchBoxId"] = "globalSearchBox";
                            ViewData["Placeholder"] = Localizer["SearchAnimals"].Value;
                            ViewData["ShowHistory"] = true;
                        }
                        <partial name="_SearchBox" />
                    </div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/About/Index">
                                <i class="bi bi-info-circle me-1" aria-hidden="true"></i>@Localizer["AboutUs"]
                            </a>
                        </li>
                        <li class="nav-item ms-2">
                            <partial name="_LanguageSwitcher" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main id="main-content" role="main" class="pb-3" tabindex="-1">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-5" role="contentinfo">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <p class="h5 mb-2"><i class="bi bi-tree-fill text-success me-2" aria-hidden="true"></i>@Localizer["SiteTitle"]</p>
                    <p class="mb-0">@Localizer["SiteDescription"]</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">&copy; @DateTime.Now.Year @Localizer["SiteTitle"]</p>
                    <a asp-area="" asp-page="/Privacy" class="text-muted text-decoration-none">@Localizer["PrivacyPolicy"]</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/search.js" asp-append-version="true"></script>
    <script src="~/js/favorites.js" asp-append-version="true"></script>
    <script src="~/js/history.js" asp-append-version="true"></script>
    <script src="~/js/performance-monitor.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
