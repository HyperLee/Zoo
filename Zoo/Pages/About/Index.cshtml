@page
@model Zoo.Pages.About.IndexModel
@{
    ViewData["Title"] = Localizer["AboutTitle"];
    ViewData["Breadcrumbs"] = new List<(string, string?)> {
        (Localizer["Home"].Value, "/"),
        (Localizer["AboutTitle"].Value, null)
    };
}

<div class="container py-4">
    <!-- 麵包屑導航 -->
    <partial name="_Breadcrumb" />

    <!-- 頁面標題 -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-3">
            <i class="bi bi-info-circle-fill text-success me-3" aria-hidden="true"></i>
            @Localizer["AboutTitle"]
        </h1>
        <p class="lead text-muted">@Localizer["AboutDescription"]</p>
    </div>

    <!-- 使命與願景 -->
    <div class="row g-4 mb-5">
        <div class="col-lg-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bi bi-bullseye text-success fs-3" aria-hidden="true"></i>
                        </div>
                        <h2 class="card-title mb-0 h4">@Localizer["OurMission"]</h2>
                    </div>
                    <p class="card-text text-muted">
                        @Localizer["OurMissionDesc"]
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bi bi-eye text-info fs-3" aria-hidden="true"></i>
                        </div>
                        <h2 class="card-title mb-0 h4">@Localizer["OurVision"]</h2>
                    </div>
                    <p class="card-text text-muted">
                        @Localizer["OurVisionDesc"]
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- 平台特色 -->
    <section class="mb-5">
        <h2 class="text-center mb-4">
            <i class="bi bi-stars text-warning me-2" aria-hidden="true"></i>
            @Localizer["Features"]
        </h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="card-body">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-4 d-inline-block mb-3">
                            <i class="bi bi-hand-index-thumb text-primary display-5" aria-hidden="true"></i>
                        </div>
                        <p class="card-title h5 fw-bold">@Localizer["FeatureInteractive"]</p>
                        <p class="card-text text-muted">
                            @Localizer["FeatureInteractiveDesc"]
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="card-body">
                        <div class="bg-success bg-opacity-10 rounded-circle p-4 d-inline-block mb-3">
                            <i class="bi bi-book text-success display-5" aria-hidden="true"></i>
                        </div>
                        <p class="card-title h5 fw-bold">@Localizer["FeatureEducation"]</p>
                        <p class="card-text text-muted">
                            @Localizer["FeatureEducationDesc"]
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="card-body">
                        <div class="bg-info bg-opacity-10 rounded-circle p-4 d-inline-block mb-3">
                            <i class="bi bi-universal-access text-info display-5" aria-hidden="true"></i>
                        </div>
                        <p class="card-title h5 fw-bold">@Localizer["FeatureAccessible"]</p>
                        <p class="card-text text-muted">
                            @Localizer["FeatureAccessibleDesc"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 統計數據 -->
    <section class="bg-success bg-gradient text-white rounded-4 p-5 mb-5">
        <div class="row text-center g-4">
            <div class="col-md-3">
                <div class="display-4 fw-bold">50+</div>
                <p class="mb-0">動物種類</p>
            </div>
            <div class="col-md-3">
                <div class="display-4 fw-bold">10+</div>
                <p class="mb-0">展區區域</p>
            </div>
            <div class="col-md-3">
                <div class="display-4 fw-bold">5+</div>
                <p class="mb-0">導覽路線</p>
            </div>
            <div class="col-md-3">
                <div class="display-4 fw-bold">100+</div>
                <p class="mb-0">知識測驗題</p>
            </div>
        </div>
    </section>

    <!-- 聯絡資訊 -->
    <section class="mb-5">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-5">
                <div class="row align-items-center">
                    <div class="col-lg-6 mb-4 mb-lg-0">
                        <h2 class="mb-3">
                            <i class="bi bi-envelope-fill text-success me-2" aria-hidden="true"></i>
                            @Localizer["ContactUs"]
                        </h2>
                        <p class="text-muted mb-4">
                            @Localizer["ContactUsDesc"]
                        </p>
                        <ul class="list-unstyled">
                            <li class="mb-3">
                                <i class="bi bi-geo-alt-fill text-success me-2" aria-hidden="true"></i>
                                台北市某某區某某路 123 號
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-telephone-fill text-success me-2" aria-hidden="true"></i>
                                (02) 1234-5678
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-envelope-fill text-success me-2" aria-hidden="true"></i>
                                info@zoo-guide.example.com
                            </li>
                            <li>
                                <i class="bi bi-clock-fill text-success me-2" aria-hidden="true"></i>
                                週一至週日 09:00 - 17:00
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6 text-center">
                        <i class="bi bi-building display-1 text-success opacity-50" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 快速連結 -->
    <section class="text-center">
        <h2 class="mb-4">開始探索</h2>
        <div class="d-flex gap-3 justify-content-center flex-wrap">
            <a asp-page="/Animals/Index" class="btn btn-success btn-lg">
                <i class="bi bi-bug me-2" aria-hidden="true"></i>
                @Localizer["ViewAnimals"]
            </a>
            <a asp-page="/Map/Index" class="btn btn-outline-success btn-lg">
                <i class="bi bi-map me-2" aria-hidden="true"></i>
                @Localizer["ViewMap"]
            </a>
            <a asp-page="/Routes/Index" class="btn btn-outline-success btn-lg">
                <i class="bi bi-signpost-2 me-2" aria-hidden="true"></i>
                @Localizer["ViewRoutes"]
            </a>
        </div>
    </section>
</div>
