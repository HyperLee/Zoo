@page
@model ErrorModel
@{
    ViewData["Title"] = Localizer["ErrorTitle"];
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <!-- 錯誤圖示 -->
            <div class="mb-4">
                <i class="bi bi-exclamation-triangle-fill text-warning display-1" aria-hidden="true"></i>
            </div>
            
            <!-- 錯誤標題 -->
            <h1 class="display-4 mb-3">@Localizer["ErrorTitle"]</h1>
            
            <!-- 錯誤訊息 -->
            <p class="lead text-muted mb-4">
                @Localizer["ErrorMessage"]
            </p>
            
            <!-- Request ID (開發模式顯示) -->
            @if (Model.ShowRequestId)
            {
                <div class="alert alert-secondary mb-4" role="alert">
                    <strong>Request ID:</strong> 
                    <code>@Model.RequestId</code>
                </div>
            }
            
            <!-- 建議動作 -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-lightbulb text-info me-2" aria-hidden="true"></i>
                        @Localizer["ErrorTryAgain"]
                    </h5>
                    <ul class="list-unstyled text-start mb-0">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2" aria-hidden="true"></i>
                            重新整理頁面或稍後再試
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2" aria-hidden="true"></i>
                            檢查您的網路連線
                        </li>
                        <li>
                            <i class="bi bi-check-circle text-success me-2" aria-hidden="true"></i>
                            如果問題持續存在，請聯絡我們
                        </li>
                    </ul>
                </div>
            </div>
            
            <!-- 導航按鈕 -->
            <div class="d-flex gap-3 justify-content-center flex-wrap">
                <a asp-page="/Index" class="btn btn-success btn-lg">
                    <i class="bi bi-house-door me-2" aria-hidden="true"></i>
                    @Localizer["ErrorBackHome"]
                </a>
                <button type="button" class="btn btn-outline-secondary btn-lg" onclick="history.back()">
                    <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>
                    返回上一頁
                </button>
            </div>
        </div>
    </div>
</div>

