@page
@model Zoo.Pages.Animals.IndexModel
@{
    ViewData["Title"] = "動物介紹";
}

<div class="container-fluid px-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">首頁</a></li>
            <li class="breadcrumb-item active" aria-current="page">動物介紹</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0">
                <i class="bi bi-bug text-success me-2"></i>動物介紹
            </h1>
            <p class="text-muted mb-0">探索動物園裡的可愛動物們</p>
        </div>
        <div>
            <span class="badge bg-success fs-6">
                <i class="bi bi-list-ul me-1"></i>共 @Model.Animals.Count 種動物
            </span>
        </div>
    </div>

    @if (Model.Animals.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            目前沒有動物資料，請稍後再試。
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var animal in Model.Animals)
            {
                <div class="col">
                    <partial name="_AnimalCard" model="animal" />
                </div>
            }
        </div>
    }
</div>
